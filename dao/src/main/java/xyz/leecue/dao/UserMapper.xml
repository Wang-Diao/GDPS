<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="xyz.leecue.dao.UserMapper">
    
    <select id="getUserByUsername" resultType="xyz.leecue.model.User">
        SELECT  id, username, password
        FROM user
        WHERE username = #{username}
    </select>
    
    <insert id="putUserByUsername" parameterType="xyz.leecue.model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(username,password,email,telephone,name,sex,age,idcard)
        VALUES (#{username},#{password},#{email},#{telephone},#{name},#{sex},#{age},#{idcard})
    </insert>
</mapper>